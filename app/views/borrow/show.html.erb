<link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:700" rel="stylesheet">

<div class="show-title">
  Below is the info about the book you'd like to borrow from: <%= @book.user.name %>
</div>
<%= render partial:'books/show_basic_info', locals: {book: @book} %>
<%= render partial: 'books/show_author_genre', locals: {book: @book} %>

<div class="book-info">
<% if @comments != [] %>
  <strong>Comments about this book:</strong>
    <% @comments.all.each do |comment| %>

      <ul><i>Comment: </i><%= comment.content %><br>
      <i>User: </i><%= comment.user.name %><br>
      <i> Comment submitted: </i><%= comment.updated_at.strftime("%A, %b %e, %Y") %><br></ul>

    <% end %>
  </div>
<% end%>

<div class="links">
  <%= button_to 'Borrow Book', borrow_path(@book), method: "patch" %>
</div>
