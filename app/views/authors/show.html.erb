<div class="show-title">
  <%= @author.name %>
</div>

<div class="book-info">
<% if !@books.present? %>
  <strong>You don't have any books by <%= @author.name %> in your collection.</strong></br>
<% else %>
  <strong>Books by <%= @author.name %> in your collection: </strong><% @books.order(:title).all.each do |book| %>
    <ul><%= link_to book.title, book_path(book) %></ul>
  <% end %>
<% end %>