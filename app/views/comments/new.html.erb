<%= form_for(@comment, url: book_comments_path(@book.id), method: "post") do |f| %>
<%= f.hidden_field :book_id, value: @book.id %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      <li><%= link_to "Back", borrowed_book_path(@book) %></li>
      </ul>
    </div>
  <% end %>
  <h1>Enter a comment below!</h1>

  <div class="field">  
    <%= f.label "Comment" %><br>
    <%= f.text_area :content, cols: "30", rows: "4", maxlength:"200" %><br>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>