<%= form_for(@book) do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h1>Enter book info below!</h1>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>  
  </div> 
  <div class="field">
    <%= f.label :year_published %>
    <%= f.number_field :year_published %>
  </div>  
  <div class="field">
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>  
  <div class="field">  
    <%= f.label :description %>
    <%= f.text_area :description %><br>
    <!-- need to add status -->
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.select :status, ([["Available for Borrowing", "Available"], ["Private: Not for Lending", "Private"]]) %>
  </div>

  <div class="field">
    <%= f.collection_check_boxes :author_ids, Author.all, :id, :name %><br>
  </div>
  <div class="field">
    <%= f.fields_for :authors, @book.authors.build do |author| %>
      <%= author.label "New Author Name:" %>
      <%= author.text_field :name %>
    <% end %>
  </div>

  <div class="field">
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %><br>
  </div>
  <div class="field">
    <%= f.fields_for :genres, @book.genres.build do |genre| %>
      <%= genre.label "New Genre:" %>
      <%= genre.text_field :name %>
    <% end %>
  </div>

  <div class="submit">
    <%= f.submit %>
  </div>
<% end %>
