<link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:700" rel="stylesheet">
<div class="show-title">
  Below is the info about the book you selected:
</div>

<%= render partial:'show_basic_info', locals: {book: @book} %>

<div class="book-info">
  <strong>Status:</strong> <%= @text %>
</div>

<%= render partial: 'show_author_genre', locals: {book: @book} %>
 <!-- this needs to go somewhere else -->
<div class="book-info">
<% if @book.comments != [] %>
<strong>Comment(s) from users who have borrowed this book:</strong>
  <% @book.comments.all.each do |comment| %>

    <ul><i>Comment: </i><%= comment.content %><br>
    <i>User: </i><%= comment.user.name %><br>
    <i> Comment submitted: </i><%= comment.updated_at.strftime("%A, %b %e") %></ul>

  <% end %>
 </div>
<% end %>

<div class="links">
<a href="/books/<%= @book.id %>/destroy">Delete</a> | <%= link_to "Edit", edit_book_path(@book) %>
</div>
